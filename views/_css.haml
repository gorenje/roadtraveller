:css
  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
  }
  #pano-container {
    float: right;
    height: 100%;
    min-height: 93%;
    width: 85%;
  }
  #info-container {
    float: left;
    height: 100%;
    width: 15%;
  }
  #buttons {
    height: 5%;
    overflow: hidden;
    background-color: grey;
  }
  #cities {
    height: 55%;
    overflow: auto;
  }
  #map {
    height: 40%;
  }
  #pano {
    float: top;
    height: 100%;
  }
  .fill {
    min-height: 100%;
    height: 100%;
  }
  .citylist {
    font: 1.156em/1.3 Gill Sans MT, Gill Sans, My Gill Sans, sans-serif;
    font-size: 12pt;
  }
  .citylist li:nth-child(odd) {
    background-color: #ddd;
  }
  .citylist li:nth-child(even) {
    background-color: white;
  }
  ul.citylist {
    list-style-type: none;
    padding-left: 5px;
  }
  ul.citylist li a {
    text-decoration: none;
  }
  .highlight {
    color: red;
  }
  .button-container {
    padding-top: 10px;
    text-align: center;
  }
  .button-container a {
    text-decoration: none;
    font-size: x-large;
  }
